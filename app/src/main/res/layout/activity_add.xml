<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <androidx.coordinatorlayout.widget.CoordinatorLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:padding="8dp"
                android:background="#F4F4F2"
                tools:context=".ui.activities.signup.SignUpActivity">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    >
                    <TextView
                        style="@style/text_size_12sp_bold"
                        android:text="@string/username"
                        android:layout_marginLeft="@dimen/_6sdp"
                        />
                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/ed_username"
                        android:layout_width="match_parent"
                        android:hint="@string/enter_username"
                        android:backgroundTint="@color/color_text"
                        android:background="@drawable/bg_edit_custom"
                        android:padding="@dimen/_8sdp"
                        android:textCursorDrawable="@drawable/cursor_edit_text"
                        style="@style/text_size_10sp_bold"
                        />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_12sdp"
                    android:orientation="vertical">

                    <TextView
                        style="@style/text_size_12sp_bold"
                        android:layout_marginLeft="@dimen/_6sdp"
                        android:text="@string/password" />

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/ed_password"
                        android:layout_width="match_parent"
                        style="@style/text_size_10sp_bold"
                        android:background="@drawable/bg_edit_custom"
                        android:padding="@dimen/_8sdp"
                        android:backgroundTint="@color/color_text"
                        android:hint="@string/enter_password"
                        android:textCursorDrawable="@drawable/cursor_edit_text"
                        android:inputType="textPassword"
                        />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_12sdp"
                    android:orientation="vertical">

                    <TextView
                        style="@style/text_size_12sp_bold"
                        android:layout_marginLeft="@dimen/_6sdp"
                        android:text="@string/email" />

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/ed_email"
                        android:layout_width="match_parent"
                        style="@style/text_size_10sp_bold"
                        android:background="@drawable/bg_edit_custom"
                        android:padding="@dimen/_8sdp"
                        android:backgroundTint="@color/color_text"
                        android:textCursorDrawable="@drawable/cursor_edit_text"
                        android:inputType="textEmailAddress"
                        android:hint="@string/enter_email"
                        />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_12sdp"
                    android:orientation="vertical">

                    <TextView
                        style="@style/text_size_12sp_bold"
                        android:layout_marginLeft="@dimen/_6sdp"
                        android:text="@string/full_name" />

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/ed_full_name"
                        android:layout_width="match_parent"
                        style="@style/text_size_10sp_bold"
                        android:background="@drawable/bg_edit_custom"
                        android:padding="@dimen/_8sdp"
                        android:backgroundTint="@color/color_text"
                        android:textCursorDrawable="@drawable/cursor_edit_text"
                        android:inputType="textEmailAddress"
                        android:hint="@string/enter_full_name"
                        />
                </LinearLayout>

                <Button
                    android:id="@+id/btn_sign_up"
                    android:background="@drawable/anim_button"
                    style="@style/text_size_12sp_bold"
                    android:text="@string/sign_up"
                    android:textAllCaps="false"
                    android:textColor="@color/white"
                    android:layout_marginTop="@dimen/_16sdp"
                    android:layout_width="@dimen/_160sdp"
                    android:layout_gravity="center"
                    />

            </LinearLayout>


        </androidx.coordinatorlayout.widget.CoordinatorLayout>

    </androidx.core.widget.NestedScrollView>
</layout>